<%- include('partials/_horizontal-navbar'); %>

    <!-- content -->
    <div class="container-fluid content-top-gap">

        <div class="row">
            <div class="col-sm-6">
                <div class="card card_border py-2 mb-4">
                    <div class="card-header">
                        <h4>Information Confidentiel</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/updatePassword" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="input__label">Ancien Mot de passe</label>
                                <input type="password" class="form-control input-style" id="exampleInputEmail1" name="oldPassword" aria-describedby="emailHelp" placeholder="xxxxxxxxxxx">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1" class="input__label">Nouveau Mot de passe</label>
                                <input type="password" class="form-control input-style" name="newPassword" id="exampleInputPassword1" placeholder="xxxxxxxxxx">
                            </div>

                            <button type="submit" class="btn btn-primary btn-style mt-4">Changer</button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-sm-6">
                <div class="card card_border py-2 mb-4">
                    <div class="card-header">
                        <h4>Information Générale</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/updateInfo" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="input__label">Nom complet</label>
                                <input type="text" class="form-control input-style" id="exampleInputEmail1" name="firstname" aria-describedby="emailHelp" placeholder="John Doe" value="<%= info.firstname %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1" class="input__label">Contact</label>
                                <input type="tel" class="form-control input-style" name="contact" id="exampleInputPassword1" placeholder="0102030405" value="<%= info.contact %>">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword" class="input__label">Votre Mot de passe</label>
                                <input type="password" class="form-control input-style" name="password" id="exampleInputPassword" placeholder="xxxxxxxxxx">
                            </div>

                            <button type="submit" class="btn btn-primary btn-style mt-4">Changer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>



    </div>
    <!-- //content -->

    <%- include('partials/_footer'); %>


        </body>

        </html>
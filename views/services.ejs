<%- include('partials/_horizontal-navbar'); %>

    <!-- content -->
    <div class="container-fluid content-top-gap">

        <div class="card card_border py-2 mb-4">
            <div class="card-header">
                <h4>Créer un service</h4>
            </div>
            <div class="card-body">
                <form action="/admin/addService" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4" class="input__label">Nom du service</label>
                            <input type="text" name="title" class="form-control input-style" id="inputEmail4" placeholder="Pédicure, Manicure, Coiffure enfant, etc.....">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4" class="input__label">Prix du service</label>
                            <input type="number" name="price" class="form-control input-style" id="inputPassword4" placeholder="500, 1000, 2000">
                        </div>
                    </div>


                    <button type="submit" class="btn btn-primary btn-style mt-4">Enregistrer</button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Liste des services</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nom du service</th>
                            <th scope="col">Prix du service</th>
                            <th scope="col">Nbre Total de Facture</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% info.forEach(function(value){ %>
                            <tr>
                                <th scope="row">
                                    <%= value.id %>
                                </th>
                                <td>
                                    <%= value.title %>
                                </td>
                                <td>
                                    <%= value.price %> Frs
                                </td>
                                <td>
                                    <%= value.nbreFacture %>
                                </td>

                            </tr>
                            <% }); %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- //content -->

    <%- include('partials/_footer'); %>


        </body>

        </html>